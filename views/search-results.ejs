<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Search Results</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
  </head>
  <body>
    <%- include('../components/navbar.ejs') %>

    <div class="container mt-5">
      <h2>Search Results</h2>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th class="col-md-3">Name</th>
              <th class="col-md-3">State/Province</th>
              <th class="col-md-3">Web Pages</th>
              <th class="col-md-3">Favorite</th>
            </tr>
          </thead>
          <tbody>
            <% universities.forEach(uni => { %>
            <tr>
              <td class="col-md-3"><%= uni.name %></td>
              <td class="col-md-3">
                <%= uni['state-province'] || "Not Found" %>
              </td>
              <td class="col-md-3">
                <a href="<%= uni.web_pages[0] %>" target="_blank"
                  ><%= uni.web_pages[0] %></a
                >
              </td>
              <td class="col-md-3">
                <form action="/favorite" method="post">
                  <input
                    type="hidden"
                    name="universityId"
                    value="<%= uni.domains[0] %>"
                  />
                  <input type="hidden" name="name" value="<%= uni.name %>" />
                  <input
                    type="hidden"
                    name="stateProvince"
                    value="<%= uni['state-province'] %>"
                  />
                  <input
                    type="hidden"
                    name="country"
                    value="<%= uni.country %>"
                  />
                  <input
                    type="hidden"
                    name="url"
                    value="<%= uni.web_pages[0] %>"
                  />
                  <button type="submit" class="btn btn-outline-primary">
                    Favorite
                  </button>
                </form>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
